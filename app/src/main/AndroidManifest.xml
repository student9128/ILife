<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kevin.live">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme">
        <activity android:name="com.kevin.live.activity.MainActivity">

        </activity>
        <activity android:name="com.kevin.live.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kevin.live.activity.LoginActivity"
            android:theme="@style/SubTheme" />
        <activity android:name="com.kevin.live.activity.SearchActivity" />
        <activity android:name=".activity.MobileLookUpActivity" />
        <activity android:name=".activity.CityBusActivity" />
        <activity android:name=".activity.JokeActivity" />
    </application>

</manifest>