<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_5"
    android:layout_marginRight="@dimen/margin_5"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/blue_1"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="true"
        app:contentPaddingBottom="@dimen/padding_10"
        app:contentPaddingTop="@dimen/padding_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/tv_joke_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <ImageView
                android:id="@+id/iv_joke_pic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/tv_joke_content" />

            <TextView
                android:id="@+id/tv_joke_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/iv_joke_pic"
                android:text="2017-05-09" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>